#:kivy 1.11.0
<SelectPage>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: r'static\art1-resized.jpg'

    BoxLayout:
        size_hint: (1,0.1)
        pos_hint: {"center_x": 0.5, "top": 1}
        Label:
            text: '[b]An Optimal Sample Selection[/b]'
            color: 0.9, 0.9, 0.8, 1  # Black color
            font_size: 45  # Larger font size
            # pos_hint: {"center_x":0.5,"y":0.45}  # Adjust position for 1000x720 screen
            markup: True
    BoxLayout:
        orientation:'horizontal'
        size_hint: (1, 0.1)
        pos_hint: {"center_x":0.5,"top":0.9}
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (0.5, 1)
            Label:
                text: 'm(45<=m<=54):'
                color: 0.9, 0.9, 0.8, 1
                font_size: 45
                size_hint:(0.45, 1)
                pos_hint: {"x": 0}
                markup: True
            TextInput:
                id: m
                size_hint:(0.55,1)
                pos_hint: {"x": 0.45}
                font_size: '45sp'  # Increase font size
                halign: 'left'  # Horizontal alignment
                valign: 'middle'  # Vertical alignment
                multiline: False  # To make valign effective
                foreground_color: 0.9, 0.9, 0.8, 1 
                background_normal: '' 
                background_color: 1, 1, 1, 0

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (0.5, 1)
            Label:
                text: 'n(7<=n<=25):'
                color: 0.9, 0.9, 0.8, 1
                font_size: 45
                size_hint:(0.45, 1)
                pos_hint: {"x": 0}
                markup: True
            TextInput:
                id: n
                size_hint: (0.55,1)
                pos_hint: {"x": 0.45}
                font_size: '45sp'  # Increase font size
                halign: 'left'  # Horizontal alignment
                valign: 'middle'  # Vertical alignment
                multiline: False  # To make valign effective
                foreground_color: 0.9, 0.9, 0.8, 1  # Black color
                background_normal: '' 
                background_color: 1, 1, 1, 0

    BoxLayout:
        orientation:'horizontal'
        size_hint: (1, 0.1)
        pos_hint: {"center_x":0.5,"top":0.8}
        padding: 10, 0

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (0.33333, 1)
            Label:
                text: 'k(4<=k<=7):'
                color: 0.9, 0.9, 0.8, 1
                font_size: 45
                size_hint:(0.45, 1)
                pos_hint: {"x": 0}
                markup: True
            TextInput:
                id: k
                size_hint:(0.55,1)
                pos_hint: {"x": 0.45}
                font_size: '45sp'  # Increase font size
                halign: 'left'  # Horizontal alignment
                valign: 'middle'  # Vertical alignment
                multiline: False  # To make valign effective
                foreground_color: 0.9, 0.9, 0.8, 1  # Black color
                background_normal: '' 
                background_color: 1, 1, 1, 0

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (0.33333, 1)
            Label:
                text: 'j(s<=j<=k):'
                color: 0.9, 0.9, 0.8, 1
                font_size: 45
                size_hint:(0.45, 1)
                pos_hint: {"x": 0}
                markup: True
            TextInput:
                id: j
                size_hint:(0.55,1)
                pos_hint: {"x": 0.45}
                font_size: '45sp'  # Increase font size
                halign: 'left'  # Horizontal alignment
                valign: 'middle'  # Vertical alignment
                multiline: False  # To make valign effective
                foreground_color: 0.9, 0.9, 0.8, 1  # Black color
                background_normal: '' 
                background_color: 1, 1, 1, 0

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (0.33333, 1)
            Label:
                text: 's(3<=s<=7):'
                color: 0.9, 0.9, 0.8, 1
                font_size: 45
                size_hint:(0.45, 1)
                pos_hint: {"x": 0}
                markup: True
            TextInput:
                id: s
                size_hint:(0.55,1)
                pos_hint: {"x": 0.45}
                font_size: '45sp'  # Increase font size
                halign: 'left'  # Horizontal alignment
                valign: 'middle'  # Vertical alignment
                multiline: False  # To make valign effective
                foreground_color: 0.9, 0.9, 0.8, 1  # Black color
                background_normal: '' 
                background_color: 1, 1, 1, 0

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (0.25,0.1)
        pos_hint: {"center_x":0.125,"top":0.7}
        CheckBox:
            group: 'group1'
            id: random_n
            active: True
            # on_active: excute.Label(m.text,n.text,k.text,j.text,s.text)
        Label:
            text: "[b]Random n[/b]"
            color: 0.9, 0.9, 0.8, 1
            markup: True
        CheckBox:
            group: 'group1'
            id: input_n
            # on_active: root.specified_select(m.text,k.text,j.text,s.text,n_content.text)
        Label:
            text: "[b]Input n[/b]"
            color: 0.9, 0.9, 0.8, 1
            markup: True
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (0.75,0.1)
        pos_hint: {"center_x":0.625,"top":0.7}
        spacing: 50
        padding: 10
        Button:
            # size_hint: (0.33333, 1)
            text: "[b]Store Database[/b]"
            color: 0.9, 0.9, 0.8, 1
            background_color: 0.4, 0.5, 0.6, 0.5
            markup: True
            on_press: root.append_data()
            on_release: result.text = 'Database has been stored!!!'

#执行算法————————————————————————
        Button:
            id: excute
            # size_hint: (0.33333, 1)
            text: "[b]Excute[/b]"
            color: 0.9, 0.9, 0.8, 1
            background_color: 0.4, 0.5, 0.6, 0.5
            markup: True
            on_press: result.text = "Please Waiting!!!"
            on_press: input.text = root.get_input(random_n.active, input_n.active, m.text, n.text, n_content.text)
            on_release: result.text = root.run_algorithms(m.text, n.text, k.text, j.text, s.text)
        Button:
            # size_hint: (0.33333, 1)
            text: "[b]Delete[/b]"
            color: 0.9, 0.9, 0.8, 1
            background_color: 0.4, 0.5, 0.6, 0.5
            markup: True
            on_release: input.text = ''
            on_release: result.text = ''
            on_release: n_content.text = ''

    BoxLayout:
        orientation: 'vertical'
        size_hint: (0.1,0.5)
        pos_hint: {"right":1,"top":0.6}
        spacing: 100
        Button:
            text: "[b]Print[/b]"
            color: 0.9, 0.9, 0.8, 1
            background_color: 0.4, 0.5, 0.6, 0.5
            markup: True
            on_release: pass
        Button:
            text: "[b]Next[/b]"
            color: 0.9, 0.9, 0.8, 1
            background_color: 0.4, 0.5, 0.6, 0.5
            markup: True
            on_release: root.page_database()
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (0.9,0.05)
        pos_hint: {"x": 0, "top": 0.55}
        spacing: 30
        padding: 50, 0
        Label:
            text: 'Value Input'
            color: 0.9, 0.9, 0.8, 1
        Label:
            text: 'Results'
            color: 0.9, 0.9, 0.8, 1
    Spinner:
        id: spinner
        text: 'GA'
        size_hint: (0.2, 0.05)
        pos_hint:{"x": 0, 'top': 0.6}
        color: 0.9, 0.9, 0.8, 1
        background_color: 0.4, 0.5, 0.6, 0.5
        values: ('GA','Greedy','SA','PSO','AFSA','ACA')
        on_text: root.choose_algorithm(self.text)

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (0.9,0.4)
        pos_hint: {"x": 0, "top": 0.5}
        spacing: 100
        padding: 50, 0
        TextInput:
            id: input
            font_size: '25sp'  # Increase font size
            halign: 'left'  # Horizontal alignment
            multiline: True  # To make valign effective
            foreground_color: 0, 0, 0, 1 
            background_normal: '' 
            background_color: 1, 1, 1, 0.5
        TextInput:
            id: result
            font_size: '25sp'  # Increase font size
            halign: 'left'  # Horizontal alignment
            multiline: True  # To make valign effective
            foreground_color: 0, 0, 0, 1  
            background_normal: '' 
            background_color: 1, 1, 1, 0.5

    BoxLayout:
        size_hint: (1, 0.1)
        pos_hint: {"top":0.1}
        padding: 10,0
        scaling: 100
        Label:
            text: 'Parameters n :'
            color: 0.9, 0.9, 0.8, 1
            font_size: 45
            size_hint:(0.25, 1)
            pos_hint: {"x": 0}
            markup: True
        TextInput:
            id: n_content
            size_hint:(0.75,1)
            pos_hint: {"x": 0.45}
            font_size: '45sp'  # Increase font size
            halign: 'left'  # Horizontal alignment
            valign: 'middle'  # Vertical alignment
            multiline: False  # To make valign effective
            foreground_color: 0.9, 0.9, 0.8, 1 
            background_normal: '' 
            background_color: 1, 1, 1, 0
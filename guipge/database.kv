#:kivy 1.11.0
<DatabasePage>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: r'D:\文档\人工智能\example\optimal_sample_selection\static\art1.png'

    BoxLayout:
        size_hint: (1,0.1)
        pos_hint: {"center_x": 0.5, "top": 1}
        Label:
            text: '[b]An Optimal Sample Selection[/b]'
            color: 0.9, 0.9, 0.8, 1  # Black color
            font_size: 40  # Larger font size
            # pos_hint: {"center_x":0.5,"y":0.45}  # Adjust position for 1000x720 screen
            markup: True

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (0.8,0.05)
        pos_hint: {"center_x":0.5,"top":0.8}
        BoxLayout:
            size_hint: (0.5,1)
            orientation: 'horizontal'
            Label:
                text: "m:"
                color: 0.9, 0.9, 0.8, 1  # Black color
                font_size: 40  # Larger font size
                size_hint: (0.5,1)
            TextInput:
                id: m_input
                font_size: '25sp'  # Increase font size
                halign: 'left'  # Horizontal alignment
                valign: 'middle'  # Vertical alignment
                foreground_color: 0.9, 0.9, 0.8, 1  # Black color
                background_normal: '' 
                background_color: 1, 1, 1, 0
        BoxLayout:
            size_hint: (0.5,1)
            orientation: 'horizontal'
            Label:
                text: "n:"
                color: 0.9, 0.9, 0.8, 1  # Black color
                font_size: 40  # Larger font size
                size_hint: (0.5,1)
            TextInput:
                id: n_input
                font_size: '25sp'  # Increase font size
                halign: 'left'  # Horizontal alignment
                valign: 'middle'  # Vertical alignment
                foreground_color: 0.9, 0.9, 0.8, 1  # Black color
                background_normal: '' 
                background_color: 1, 1, 1, 0
        BoxLayout:
            size_hint: (0.5,1)
            orientation: 'horizontal'
            Label:
                size_hint: (0.5,1)
                text: "k:"
                color: 0.9, 0.9, 0.8, 1  # Black color
                font_size: 40  # Larger font size
            TextInput:
                id: k_input
                font_size: '25sp'  # Increase font size
                halign: 'left'  # Horizontal alignment
                valign: 'middle'  # Vertical alignment
                foreground_color: 0.9, 0.9, 0.8, 1  # Black color
                background_normal: '' 
                background_color: 1, 1, 1, 0

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (0.8,0.05)
        pos_hint: {"center_x":0.5,"top":0.75}
        BoxLayout:
            size_hint: (0.5,1)
            orientation: 'horizontal'
            Label:
                text: "j:"
                color: 0.9, 0.9, 0.8, 1  # Black color
                font_size: 40  # Larger font size
                size_hint: (0.5,1)
            TextInput:
                id: j_input
                font_size: '25sp'  # Increase font size
                halign: 'left'  # Horizontal alignment
                valign: 'middle'  # Vertical alignment
                foreground_color: 0.9, 0.9, 0.8, 1  # Black color
                background_normal: '' 
                background_color: 1, 1, 1, 0
        BoxLayout:
            size_hint: (0.5,1)
            orientation: 'horizontal'
            Label:
                text: "s:"
                color: 0.9, 0.9, 0.8, 1  # Black color
                font_size: 40  # Larger font size
                size_hint: (0.5,1)
            TextInput:
                id: s_input
                font_size: '25sp'  # Increase font size
                halign: 'left'  # Horizontal alignment
                valign: 'middle'  # Vertical alignment
                foreground_color: 0.9, 0.9, 0.8, 1  # Black color
                background_normal: '' 
                background_color: 1, 1, 1, 0
        BoxLayout:
            size_hint: (0.5,1)
            orientation: 'horizontal'
            Label:
                size_hint: (0.5,1)
                text: "algrothim:"
                color: 0.9, 0.9, 0.8, 1  # Black color
                font_size: 40  # Larger font size
            TextInput:
                id: algrothim
                size_hint: (0.25,1)
                font_size: '25sp'  # Increase font size
                halign: 'left'  # Horizontal alignment
                valign: 'middle'  # Vertical alignment
                foreground_color: 0.9, 0.9, 0.8, 1  # Black color
                background_normal: '' 
                background_color: 1, 1, 1, 0

    BoxLayout:
        orientation:'horizontal'
        size_hint: (1, 0.1)
        pos_hint: {"center_x":0.5,"top":0.9}

        Label:
            text: '[b]Data Base Resourse[/b]'
            color: 0.9, 0.9, 0.8, 1
            font_size: 45  # Larger font size
            markup: True
        BoxLayout:
            spacing: 50
            padding: 10
            Button:
                text: "[b]Display[/b]"
                color: 0.9, 0.9, 0.8, 1
                background_color: 1, 1, 1, 0.3
                markup: True
                on_release: text_input.text = root.query_specified_data(m_input.text,n_input.text,k_input.text,j_input.text,s_input.text,algrothim.text)
            Button:
                text: "[b]Delete[/b]"
                color: 0.9, 0.9, 0.8, 1
                background_color: 1, 1, 1, 0.3
                markup: True
                on_release: text_input.text = root.delete_specified_data(m_input.text,n_input.text,k_input.text,j_input.text,s_input.text,algrothim.text)
            Button:
                text: "[b]Download DB[/b]"
                color: 0.9, 0.9, 0.8, 1
                background_color: 1, 1, 1, 0.3
                markup: True
                on_release: root.show_load()

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (0.9,0.7)
        pos_hint: {"x": 0, "top": 0.7}
        spacing: 100
        padding: 50, 0
        TextInput:
            id: Value Input
            font_size: '25sp'  # Increase font size
            halign: 'left'  # Horizontal alignment
            multiline: True  # To make valign effective
            foreground_color: 0, 0, 0, 1 
            background_normal: '' 
            background_color: 1, 1, 1, 0.5
        TextInput:
            id: Result
            font_size: '25sp'  # Increase font size
            halign: 'left'  # Horizontal alignment
            multiline: True  # To make valign effective
            foreground_color: 0, 0, 0, 1 
            background_normal: '' 
            background_color: 1, 1, 1, 0.5

    BoxLayout:
        orientation: 'vertical'
        size_hint: (0.1,0.5)
        pos_hint: {"right":1,"top":0.6}
        spacing: 100
        Button:
            text: "[b]Previous[/b]"
            color: 0.9, 0.9, 0.8, 1
            background_color: 1, 1, 1, 0.3
            markup: True
            on_release: root.page_select()
        Button:
            text: "[b]Re-Filter[/b]"
            color: 0.9, 0.9, 0.8, 1
            background_color: 1, 1, 1, 0.3
            markup: True
            on_release: root.page_refiter()
        Button:
            text: "[b]Back to Index[/b]"
            color: 0.9, 0.9, 0.8, 1
            background_color: 1, 1, 1, 0.3
            markup: True
            on_release: root.page_index()

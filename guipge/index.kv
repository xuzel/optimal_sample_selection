#:kivy 1.11.0
<IndexPage>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: r'D:\文档\人工智能\example\optimal_sample_selection\static\art1.png' 

    Image:
        pos_hint: {"center_x":0.5,"y":0.30}
        source: './static/logo.png'

    Label:
        text: '[b]An Optimal Sample Selection[/b]'
        color: 0.9, 0.9, 0.8, 1  # Black color
        font_size: 45  # Larger font size
        pos_hint: {"center_x":0.5,"y":0.20}  # Adjust position for 1000x720 screen
        markup: True

    Label:
        text: '[b]v.1.14.5[/b]'
        color: 0.9, 0.9, 0.8, 1
        font_size: 20  #18
        pos_hint: {"center_x":0.5,"y":0.16}
        markup: True

    BoxLayout:
        orientation: 'vertical'
        size_hint: (1,0.4)
        spacing: 100
        padding: 100,0
        pos_hint: {"center_x":0.5,"top":0.5}

        Button:
            text: "[b]Select[/b]"
            markup: True
            color: 0.9, 0.9, 0.8, 1  # Black color
            background_normal: '' 
            background_color: 0.4, 0.5, 0.6, 0.5  # RGBA color, 0.25 alpha means 25% transparent
            on_press: root.page_select()

        Button:
            text: "[b]Database[/b]"
            markup: True
            color: 0.9, 0.9, 0.8, 1 # Black color
            background_normal: '' # Rounded button image
            background_color: 0.4, 0.5, 0.6, 0.5  # RGBA color, 0.25 alpha means 25% transparent
            on_release: root.page_database()
        
        Button:
            text: "[b]Re-Filter[/b]"
            markup: True
            color: 0.9, 0.9, 0.8, 1 # Black color
            background_normal: '' # Rounded button image
            background_color: 0.4, 0.5, 0.6, 0.5  # RGBA color, 0.25 alpha means 25% transparent
            on_release: root.page_refilter()
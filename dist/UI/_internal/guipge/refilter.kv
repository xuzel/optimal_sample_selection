            text: "[b]Excute[/b]"
            color: 0.9, 0.9, 0.8, 1
            background_color: 0.4, 0.5, 0.6, 0.5
            markup: True
            on_release: Input.text = "Excute"
            on_release: Result.text = "Excute"
        Button:

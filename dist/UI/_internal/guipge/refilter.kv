            background_color: 0.4, 0.5, 0.6, 0.5
            markup: True
            on_release: Input.text = "Print"
            on_release: Result.text = "Print"
        Button:
            text: "[b]Previous[/b]"
            color: 0.9, 0.9, 0.8, 1
            background_color: 0.4, 0.5, 0.6, 0.5
            markup: True
            on_release: root.page_database()
        Button:
            text: "[b]Back to Index[/b]"
            color: 0.9, 0.9, 0.8, 1
            background_color: 0.4, 0.5, 0.6, 0.5
            markup: True
            on_release: root.page_index()

